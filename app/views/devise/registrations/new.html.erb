<h2 class = "headname"> ユーザー登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <%= f.fields_for :profile do |i| %>
  <div class = "field">
    <%= i.label :first_name %>
    <%= i.text_field :first_name, autofocus: true %>
  </div>

  <div class = "field">
    <%= i.label :family_name%>
    <%= i.text_field :family_name, autofocus: true %>
  <div>

  <div class = "field">
    <%= i.label :first_name_kana%>
    <%= i.text_field :first_name_kana, autofocus: true %>
  </div>

  <div class = "field" >
    <%= i.label :family_name_kana %>
    <%= i.text_field :family_name_kana, autofocus: true %>
  </div>

  <div class = "field">
    <%= i.label :birth_date %>
    <%= i.text_field :birth_date, autofocus: true %>
  </div>
  <%end%>

  <%= f.fields_for :destination do |d| %>
  <div class = "field">
    <%= d.label :first_name %>
    <%= d.text_field :first_name, autofocus: true %>
  </div>

  <div class = "field">
    <%= d.label :family_name%>
    <%= d.text_field :family_name, autofocus: true %>
  <div>

  <div class = "field">
    <%= d.label :first_name_kana%>
    <%= d.text_field :first_name_kana, autofocus: true %>
  </div>

  <div class = "field" >
    <%= d.label :family_name_kana %>
    <%= d.text_field :family_name_kana, autofocus: true %>
  </div>

  <div class = "field">
    <%= d.label :postal_code %>
    <%= d.text_field :postal_code, autofocus: true %>
  </div>

  <div class = "field">
    <%= d.label :prefecture_code %>
    <%= d.text_field :prefecture_code, autofocus: true %>
  </div>

  <div class = "field">
    <%= d.label :city %>
    <%= d.text_field :city, autofocus: true %>
  </div>

  <div class = "field">
    <%= d.label :house_number %>
    <%= d.text_field :house_number, autofocus: true %>
  </div>
  <div class = "field">
    <%= d.label :room_number %>
    <%= d.text_field :room_number, autofocus: true %>
  </div>
  <div class = "lebel">
    <%= d.label :phone_number %>
    <%= d.text_field :phone_number, autofocus: true %>
  </div>
  <%end%>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
