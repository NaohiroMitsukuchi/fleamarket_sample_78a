= render partial: 'items/header'

.MyPage
  = render partial: 'devise/sessions/side_nav'
  .MainField
    -# = render partial: 'devise/registrations/new.html.haml'
    .RegistrationPage
      = link_to image_tag("logo/logo.png",size:"428x125") , "/"
      %h2.head-name 会員情報登録
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.label :nickname,"ニックネーム"
          %span.sabu-red (必須)
          %br/
          = f.text_field :nickname, autofocus: true
        .field
          = f.label :email
          %span.sabu-red (必須)
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email"
        .field
          = f.label :password,"パスワード"
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} 文字以上)
            %span.sabu-red (必須)
            %br/
          = f.password_field :password, autocomplete: "new-password"
        .field
          = f.label :password_confirmation,"パスワード再確認"
          %span.sabu-red (必須)
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password"
        %h2.head-name 本人登録
        = f.fields_for :profile do |i|
          .field
            = i.label :first_name,"名字"
            %span.sabu-red (必須)
            %br/
            = i.text_field :first_name, autofocus: true
          .field
            = i.label :family_name,"名前"
            %span.sabu-red (必須)
            %br/
            = i.text_field :family_name, autofocus: true
            %div
          .field
            = i.label :first_name_kana, "名字フリカナ"
            %span.sabu-red (必須)
            %br/
            = i.text_field :first_name_kana, autofocus: true
          .field
            = i.label :family_name_kana, "名前フリガナ"
            %span.sabu-red (必須)
            %br/
            = i.text_field :family_name_kana, autofocus: true
          .field
            = i.label :birth_date,"生年月日"
            %span.sabu-red (必須)
            %br/
            = i.date_select :birth_date, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1)
        %h2.head-name 送り主住所
        = f.fields_for :destination do |d|
          .field
            = d.label :first_name,"送り先の名字"
            %span.sabu-red (必須)
            %br/
            = d.text_field :first_name, autofocus: true
          .field
            = d.label :family_name, "送り先名前"
            %span.sabu-red (必須)
            %br/
            = d.text_field :family_name, autofocus: true
          .field
            = d.label :first_name_kana, "送り先名字フリガナ"
            %span.sabu-red (必須)
            %br/
            = d.text_field :first_name_kana, autofocus: true
          .field
            = d.label :family_name_kana, "送り先名前フリガナ"
            %span.sabu-red (必須)
            %br/
            = d.text_field :family_name_kana, autofocus: true
          .field
            = d.label :postal_code, "郵便番号"
            %span.sabu-red (必須)
            %br/
            = d.text_field :postal_code, autofocus: true, placeholder: 'postal_code', class: "postal_code", id: "address_zipcode"
          .field
            = d.label :prefecture_code, "住所"
            %span.sabu-red (必須)
            %br/
            = d.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, class: "address", id: "address_prefecture_name"
            = d.text_field :city, autofocus: true, placeholder: 'city', class: "address", id:"address_city"
            = d.text_field :house_number, autofocus: true, placeholder: 'house_number', class: "address", id: "address_street"
          .field
            = d.label :room_number,"マンションの場合は部屋の番号"
            %br/
            = d.text_field :room_number, autofocus: true
          .lebel
            = d.label :phone_number,"電話番号"
            %span.sabu-red (必須)
            %br/
            = d.text_field :phone_number, autofocus: true
        .actions
          = f.submit "登録"


= render partial: 'items/footer'
= render partial: 'items/putting_up_btn'