.CardShowPage
  #CardShowHeader
    %h1
      = link_to image_tag('logo.png', size: "214x62", alt: "FURIMA"), root_path
  #CardShowArea
    %h2 支払方法
    .ShowArea
      = form_with url: buy_items_path, local: true do |form|
        .ShowCard
          %dl
            %dt.ShowCard__label
              = form.label :number, "カード番号"
            %dd.ShowCard__detail
              dummydummydummy
        .ShowCard
          %dl
            %dt.ShowCard__label
              = form.label :exp_date, "有効期限"
            %dd.ShowCard__detail.ShowCard__exp_date
              dummy
              %p 月&nbsp;／
              dummy
              %p 年
        .ShowCard
          %dl
            %dt.ShowCard__label
              = form.label :cvc, "セキュリティコード"
            %dd.ShowCard__detail
              dummy
        .ShowCard
          %p.ShowCard__btn
            = link_to "このカードを使う", buy_items_path
          %p.ShowCard__back
            = link_to "もどる", :back
  #CardShowFooter
    %h2
      = image_tag "logo.png", size: "107x31", alt: "FURIMA"
    %p &copy; FURIMA