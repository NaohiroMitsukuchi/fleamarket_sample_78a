= form_with model: @profile, method: :post  do |f|
  .field
    = f.label :first_name
    = f.text_field :first_name, autofocus: true
  .field
    = f.label :family_name
    = f.text_field, class: 'form-name', :family_name, autofocus: true
    %div
      .field
        = f.label :first_name_kana
        = f.text_field :first_name_kana, autofocus: true
      .field
        = f.label :family_name_kana
        = f.text_field :family_name_kana, autofocus: true
      .field
        = f.label :birth_date
        = f.text_field :birth_date, autofocus: true
      .actions
        = f.submit "登録"
